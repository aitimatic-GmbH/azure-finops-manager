{
  "schema_version": "1.0",
  "analysis_modules": {
    "old_snapshots": {
      "enabled": true,
      "retention_days": 0
    },
    "unattached_disks": {
      "enabled": true
    },
    "unassociated_public_ips": {
      "enabled": true
    },
    "azure_advisor": {
      "enabled": true,
      "categories": ["Cost", "HighAvailability"]
    },
    "underutilized_vms": {
    "enabled": true,
    "evaluation_period_days": 7,
    "max_cpu_percentage_threshold": 5
    }
  },
  "global_settings": {
    "excluded_resource_groups": [
      "rg-core-infra",
      "rg-prod-databases"
    ]
  }
}
