{
  "schema_version": "1.0",
  "analysis_modules": {
    "old_snapshots": {
      "enabled": true,
      "retention_days": 90
    },
    "unattached_disks": {
      "enabled": true
    },
    "unassociated_public_ips": {
      "enabled": true
    },
    "azure_advisor": {
      "enabled": true,
      "categories": ["Cost", "HighAvailability"]
    }
  },
  "global_settings": {
    "excluded_resource_groups": [
      "rg-core-infra",
      "rg-prod-databases"
    ]
  }
}
